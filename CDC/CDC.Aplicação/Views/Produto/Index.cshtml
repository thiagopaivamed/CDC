@model IEnumerable<CDC.Dominio.Models.Produto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div align="center">
    <div class="panel panel-default">
        <h4>Produtos Cadastrados</h4>
    </div>
    <br />

    <p>
        <button onclick="window.location = '@Url.Action("Create", "Produto")'" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span>  Cadastrar novo produto</button>
    </p>
    <br/>
    <br/>
</div>
<div align="center">

    <div class="table table-responsive" style="text-align: center; height: 80%; width: 80%;">

        <table class="table table-striped table-bordered table-hover" id="tabela">
            <thead>
                <tr>
                    <th style="text-align: center">
                        Nome
                    </th>
                    <th style="text-align: center">
                        Preço
                    </th>
                    <th style="text-align: center">
                        Tipo
                    </th>
                    <th style="text-align: center">
                        Opções
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @Html.ActionLink(item.Nome, "Details", new { id = item.IdProduto })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipodeProduto.Nome)
                        </td>
                        <td>

                            @using (Html.BeginForm("Delete", "Produto", new { id = item.IdProduto }))
                            {
                                @Html.ActionLink("Editar", "Edit", new { id = item.IdProduto }, new { @class = "btn btn-link" })
                                <button type="submit" class="btn btn-link" onclick="return confirm ('Excluir @item.Nome ?');"> Excluir </button>

                            }
                        </td>
                    </tr>

                }
            </tbody>

            <tfoot>
                <tr>
                    <th style="text-align: center">
                        Nome
                    </th>
                    <th style="text-align: center">
                        Preço
                    </th>
                    <th style="text-align: center">
                       Tipo
                    </th>
                    <th style="text-align: center">
                        Opções
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>

</div>