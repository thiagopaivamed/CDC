@model CDC.Dominio.Models.Carrinho
<div class="navbar-right">
    @Html.ActionLink("Checkout", "Index", "Carrinho", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-default navbar-btn" })
</div>

<div class="navbar-text navbar-right">
    <b>Your cart:</b>
    @Model.Linhas().Sum(x => x.Quantidade) item(s),
    @Model.ValorTotal().ToString("c")
</div>
